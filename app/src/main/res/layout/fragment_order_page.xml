<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="755dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="Order Details"
                android:textColor="@color/chromeyellow"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Product Details Title -->
            <TextView
                android:id="@+id/productdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Product Details"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Product Name -->
            <TextView
                android:id="@+id/product_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Product Name"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Chocolate Cupcake"
                android:textSize="18sp" />

            <!-- Product Price -->
            <TextView
                android:id="@+id/product_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Product Price"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="$5.99"
                android:textSize="18sp" />

            <!-- Quantity Input -->
            <TextView
                android:id="@+id/quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Quantity"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/quantity_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border"
                android:hint="Enter quantity"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="18sp" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/total_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Total Price"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="$0.00"
                android:textSize="18sp" />

            <!-- Card Details Title -->
            <TextView
                android:id="@+id/card_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Card Details"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Card Number -->
            <TextView
                android:id="@+id/card_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Card Number"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/card_number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border"
                android:hint="Enter card number"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="18sp" />

            <!-- Cardholder Name -->
            <TextView
                android:id="@+id/cardholder_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Cardholder Name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cardholder_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border"
                android:hint="Enter cardholder name"
                android:padding="10dp"
                android:textSize="18sp" />

            <!-- Expiration Date -->
            <TextView
                android:id="@+id/expiration_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Expiration Date"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/expiration_date_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border"
                android:hint="MM/YY"
                android:padding="10dp"
                android:textSize="18sp" />

            <!-- CVV -->
            <TextView
                android:id="@+id/cvv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="CVV"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cvv_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@drawable/rounded_border"
                android:hint="Enter CVV"
                android:inputType="numberPassword"
                android:padding="10dp"
                android:textSize="18sp" />

            <!-- Navigate to Payment Button -->
            <Button
                android:id="@+id/navigate_to_payment"
                android:layout_width="287dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/chromeyellow"
                android:text="Place Order"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
